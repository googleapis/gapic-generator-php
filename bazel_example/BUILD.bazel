load(
    "@gapic_generator_php//rules_php_gapic:php_gapic.bzl",
    "php_gapic_library",
    "php_grpc_library",
    "php_proto_library",
)
load(
    "@gapic_generator_php//rules_php_gapic:php_gapic_pkg.bzl",
    "php_gapic_assembly_pkg",
)
load("@rules_gapic//:gapic.bzl", "proto_library_with_info")
load("@rules_proto//proto:defs.bzl", "proto_library")

proto_library(
    name = "example_proto",
    srcs = [
        "example.proto",
    ],
    deps = [
        "@com_google_googleapis//google/api:client_proto",
        "@com_google_googleapis//google/api:resource_proto",
        "@com_google_googleapis//google/longrunning:operations_proto",
    ],
)

php_proto_library(
    name = "example_php_proto",
    deps = [
        ":example_proto",
    ],
)

php_grpc_library(
    name = "example_php_grpc",
    srcs = [
        ":example_proto",
    ],
    deps = [
        ":example_php_proto",
    ],
)

php_gapic_library(
    name = "example_php_gapic",
    srcs = [
        ":example_proto",
    ],
    gapic_yaml = ":example-gapic.yaml",
    grpc_service_config = ":example-grpc-service-config.json",
    service_yaml = ":example-service.yaml",
    deps = [
        ":example_php_grpc",
        ":example_php_proto",
    ],
)

php_gapic_assembly_pkg(
    name = "example_php_pkg",
    deps = [
        ":example_php_gapic",
        ":example_php_grpc",
        ":example_php_proto",
    ],
)
